# BusinessHub Mobile Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Base API URL for your backend services
API_BASE_URL=https://api.businesshub.com
API_VERSION=v1

# API Endpoints
API_AUTH_ENDPOINT=/auth
API_USERS_ENDPOINT=/users
API_HUBS_ENDPOINT=/hubs
API_APPLICATIONS_ENDPOINT=/applications

# API Timeout settings (in seconds)
API_TIMEOUT=30
API_CONNECT_TIMEOUT=10

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Token configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY_HOURS=24

# OAuth Configuration (if using social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_CLIENT_TOKEN=your_facebook_client_token

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection (if using local database)
DATABASE_URL=your_database_connection_string
DATABASE_NAME=businesshub_db

# =============================================================================
# File Storage & Media
# =============================================================================

# File upload configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cloud storage (AWS S3, Google Cloud Storage, etc.)
STORAGE_PROVIDER=aws  # aws, gcp, azure
STORAGE_BUCKET=businesshub-uploads
STORAGE_REGION=us-east-1

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# Push Notifications
# =============================================================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_SOCIAL_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# =============================================================================
# App Configuration
# =============================================================================

# App settings
APP_NAME=BusinessHub Mobile
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Environment
ENVIRONMENT=development  # development, staging, production

# Debug settings
DEBUG_MODE=true
LOG_LEVEL=debug  # debug, info, warning, error

# =============================================================================
# Third-party Services
# =============================================================================

# Payment gateway (if applicable)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Email service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# =============================================================================
# Development & Testing
# =============================================================================

# Test configuration
TEST_API_BASE_URL=https://test-api.businesshub.com
TEST_DATABASE_URL=your_test_database_url

# Mock data settings
USE_MOCK_DATA=false
MOCK_DELAY=1000  # milliseconds

# =============================================================================
# Platform-specific Configuration
# =============================================================================

# iOS specific
IOS_BUNDLE_ID=com.businesshub.businesshubMobile
IOS_TEAM_ID=your_ios_team_id

# Android specific
ANDROID_PACKAGE_NAME=com.businesshub.businesshub_mobile
ANDROID_SIGNING_KEY_ALIAS=your_key_alias
ANDROID_SIGNING_KEY_PASSWORD=your_key_password

# =============================================================================
# Business Logic Configuration
# =============================================================================

# Hub application settings
MAX_HUB_APPLICATIONS_PER_USER=5
HUB_APPLICATION_EXPIRY_DAYS=30

# User settings
MAX_PROFILE_IMAGE_SIZE=5242880  # 5MB
ALLOWED_PROFILE_IMAGE_TYPES=image/jpeg,image/png

# =============================================================================
# Cache Configuration
# =============================================================================

# Cache settings
CACHE_DURATION=3600  # 1 hour in seconds
MAX_CACHE_SIZE=100  # MB

# =============================================================================
# Rate Limiting
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds
