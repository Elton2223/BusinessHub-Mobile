# API Configuration
API_BASE_URL=http://10.0.2.2:3005
API_VERSION=v1
API_AUTH_ENDPOINT=/user-management
API_USERS_ENDPOINT=/user-management
API_HUBS_ENDPOINT=/jobhub
API_APPLICATIONS_ENDPOINT=/applications
API_TIMEOUT=10
API_CONNECT_TIMEOUT=5

# Authentication & Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY_HOURS=24
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_CLIENT_TOKEN=your-facebook-client-token

# Database Configuration
DATABASE_URL=your-database-url
DATABASE_NAME=businesshub_db

# File Storage & Media
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
STORAGE_PROVIDER=aws
STORAGE_BUCKET=businesshub-uploads
STORAGE_REGION=us-east-1

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# Analytics & Monitoring
GA_TRACKING_ID=your-ga-tracking-id
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# App Configuration
APP_NAME=BusinessHub Mobile
APP_VERSION=1.0.0
BUILD_NUMBER=1
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Third-party Services
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Development & Testing
TEST_API_BASE_URL=https://test-api.businesshub.com
TEST_DATABASE_URL=your-test-database-url
USE_MOCK_DATA=false
MOCK_DELAY=1000

# Platform-specific Configuration
IOS_BUNDLE_ID=com.businesshub.businesshubMobile
IOS_TEAM_ID=your-ios-team-id
ANDROID_PACKAGE_NAME=com.businesshub.businesshub_mobile
ANDROID_SIGNING_KEY_ALIAS=your-android-signing-key-alias
ANDROID_SIGNING_KEY_PASSWORD=your-android-signing-key-password

# Business Logic Configuration
MAX_HUB_APPLICATIONS_PER_USER=5
HUB_APPLICATION_EXPIRY_DAYS=30
MAX_PROFILE_IMAGE_SIZE=5242880
ALLOWED_PROFILE_IMAGE_TYPES=image/jpeg,image/png

# Cache Configuration
CACHE_DURATION=3600
MAX_CACHE_SIZE=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
